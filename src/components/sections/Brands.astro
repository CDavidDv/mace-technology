---
import Container from "../shared/Container.astro";
import Title from "../shared/Title.astro";

---

<section id="Proyectos">
    <Container className="space-y-8">
        <div class="text-center max-w-3xl mx-auto">
            <Title>
                Empresas que han confiado en nosotros
            </Title>
        </div>
        <div class="flex justify-center flex-wrap gap-4">
            <div class="p-2 sm:p-4 rounded-xl bg-body border border-box-border group">
                <img src="/logos/figralogo.svg" width="150"  alt="FigraGas" class=" bg-gray-100 p-2 rounded-xl h-12 sm:h-15 w-auto ease-linear duration-300 grayscale group-hover:!grayscale-0 group-hover:scale-110 group-hover:shadow-md ">
            </div>
            <div class="p-4 sm:p-5 rounded-xl bg-body border border-box-border group">
                <img src="/logos/logoLab.webp"   alt="Laboratorios" class=" w-36 ease-linear duration-300 grayscale group-hover:!grayscale-0 group-hover:scale-110 group-hover:shadow-lg rounded-xl">
            </div>
        </div>
    </Container>
</section>