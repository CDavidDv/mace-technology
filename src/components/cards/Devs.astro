---
import data from "../data/infoDevs.json";
import Paragraph from "../shared/Paragraph.astro";
---


{
    data.map((info) => (
        <div class="p-3 lg:w-1/4 md:w-1/2 w-4/5  rounded-3xl border border-box-border bg-box-bg shadow-lg shadow-box-shadow relative overflow-hidden">
            <div class="h-full flex flex-col items-center text-center">
                <div class="w-full p-0 bg-gray-200 bg-opacity-20 rounded-3xl mb-3"  >
                    <img
                    alt=`Foto de perfil de ${info.name}`
                    class="flex-shrink-0 rounded-3xl w-full h-56 object-contain object-center"
                    src={info.imgProfile}
                    />
                </div>
                <div class="w-full">
                    <h2 class="title-font font-bold text-lg text-black dark:text-white">
                        {info.name}
                    </h2>
                    <h3 class="dark:text-gray-400 text-gray-500 mb-3">{info.position}</h3>
                    <p class="dark:text-gray-400 text-gray-600 mb-4">{info.description}</p>
                    <span class="inline-flex gap-2">
                        <a
                            href={info.linkFacebook}
                            target="_blank"
                            class=" text-gray-100 p-2 bg-orange-500 shadow-lg rounded-full  ease-linear duration-100 hover:scale-125 bg-gradient-to-br hover:bg-right-bottom hover:bg-orange-400"
                        >
                            <svg
                                fill="none"
                                stroke="currentColor"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="1"
                                class="w-5 h-5"
                                viewBox="0 0 24 24"
                            >
                                <path d="M18 2h-3a5 5 0 00-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 011-1h3z" />
                            </svg>
                        </a>
                        <a
                            href={info.linkInstragram}
                            class=" text-gray-100 p-2 bg-orange-500 shadow-lg rounded-full  ease-linear duration-100 hover:scale-125 bg-gradient-to-br hover:bg-right-bottom hover:bg-orange-400"
                            target="_blank"
                        >
                            <svg
                                fill="none"
                                stroke="currentColor"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="1"
                                class="w-5 h-5"
                                viewBox="0 0 24 24"
                            >
                                <path d="M23 3a10.9 10.9 0 01-3.14 1.53 4.48 4.48 0 00-7.86 3v1A10.66 10.66 0 013 4s-4 9 5 13a11.64 11.64 0 01-7 2c9 5 20 0 20-11.5a4.5 4.5 0 00-.08-.83A7.72 7.72 0 0023 3z" />
                            </svg>
                        </a>
                        <a
                            href={info.linkGmail}
                            class="text-gray-100 transition-all p-2 bg-orange-500 shadow-lg rounded-full ease-linear duration-100 hover:scale-125 bg-gradient-to-br hover:bg-right-bottom hover:bg-orange-400"
                            target="_blank"
                        >
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                fill="currentColor"
                                class="bi bi-envelope h-5 w-5"
                                stroke-width="1"
                                viewBox="0 0 16 16"
                            >
                                <path d="M0 4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V4Zm2-1a1 1 0 0 0-1 1v.217l7 4.2 7-4.2V4a1 1 0 0 0-1-1H2Zm13 2.383-4.708 2.825L15 11.105V5.383Zm-.034 6.876-5.64-3.471L8 9.583l-1.326-.795-5.64 3.47A1 1 0 0 0 2 13h12a1 1 0 0 0 .966-.741ZM1 11.105l4.708-2.897L1 5.383v5.722Z" />
                            </svg>
                        </a>
                        <a
                            href={info.linkLnkd}
                            class="text-gray-100 transition-all p-2 bg-orange-500 shadow-lg rounded-full ease-linear duration-100 hover:scale-125 bg-gradient-to-br hover:bg-right-bottom hover:bg-orange-400"
                            target="_blank"
                        >
                        <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="bi bi-linkedin h-5 w-5" viewBox="0 0 16 16">
                          <path d="M0 1.146C0 .513.526 0 1.175 0h13.65C15.474 0 16 .513 16 1.146v13.708c0 .633-.526 1.146-1.175 1.146H1.175C.526 16 0 15.487 0 14.854V1.146zm4.943 12.248V6.169H2.542v7.225h2.401zm-1.2-8.212c.837 0 1.358-.554 1.358-1.248-.015-.709-.52-1.248-1.342-1.248-.822 0-1.359.54-1.359 1.248 0 .694.521 1.248 1.327 1.248h.016zm4.908 8.212V9.359c0-.216.016-.432.08-.586.173-.431.568-.878 1.232-.878.869 0 1.216.662 1.216 1.634v3.865h2.401V9.25c0-2.22-1.184-3.252-2.764-3.252-1.274 0-1.845.7-2.165 1.193v.025h-.016a5.54 5.54 0 0 1 .016-.025V6.169h-2.4c.03.678 0 7.225 0 7.225h2.4z"/>
                        </svg>
                        </a>
                    </span>
                </div>
            </div>
        </div>
    ))
}
